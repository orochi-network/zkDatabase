{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@apollo-app": ["./src/apollo"],
      "@common": ["./src/common"],
      "@domain": ["./src/domain"],
      "@helper": ["./src/helper"],
      "@model": ["./src/model"],
      "@service": ["./src/service"],
    }, 
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "references": [{ "path": "../storage" }],
  "include":  ["**/*.ts"],
  "exclude": ["build", "node_modules", "typechain/**/*.ts"]
}