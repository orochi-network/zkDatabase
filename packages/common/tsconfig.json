{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "esnext"
    ],
    "outDir": "./build",
    "rootDir": ".",
    "declarationMap": false,
    "strictPropertyInitialization": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@o1js/*": [
        "../../node_modules/o1js/dist/node/lib/provable/*"
      ],
      "@common": [
        "./src/common"
      ],
      "@sdk": [
        "./src/sdk"
      ],
      "@types": [
        "./src/types"
      ],
      "@utils": [
        "./src/utils"
      ],
      "@tests": [
        "./src/tests"
      ]
    }
  },
  "references": [
    {
      "path": "../api"
    },
    {
      "path": "../smart-contract"
    }
  ],
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules",
    "./build",
    "**/*.spec.ts",
    "**/*.test.ts",
  ]
}